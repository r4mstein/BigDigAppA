<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvContainer_HI"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLink_HI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/firasans_regular"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="https://translate.google.com.ua"
            />

        <TextView
            android:id="@+id/tvTime_HI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLink_HI"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/firasans_light"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="02.11.2018"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>